{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
